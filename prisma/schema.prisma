generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  passwordHash     String
  phoneNumber      String?
  otpHash          String?
  otpExpiresAt     DateTime?
  firebaseToken    String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  isActive         Boolean   @default(false)
  lastLoginAttempt DateTime?
  lastLogout       DateTime?
  lastLogin        DateTime?
  firstName        String?
  lastName         String?
  middleName       String?
  accounts         Account[]
}

model Account {
  id                   String        @id @default(uuid())
  userId               String?
  accountNumber        String        @unique
  balance              Decimal       @default(0.00) @db.Decimal(10, 2)
  currency             String?       @default("NGN")
  accountType          String?       @default("savings")
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  User                 User?         @relation(fields: [userId], references: [id])
  receivedTransactions Transaction[] @relation("DestinationAccountTransactions")
  sentTransactions     Transaction[] @relation("SourceAccountTransactions")

  @@index([userId])
}

model Transaction {
  id                   String   @id @default(uuid())
  sourceAccountId      String
  destinationAccountId String
  amount               Decimal  @db.Decimal(10, 2)
  reference            String?  @default("INTERBANK_TRANSFER")
  status               String   @default("PENDING")
  date                 DateTime @default(now())
  destinationAccount   Account  @relation("DestinationAccountTransactions", fields: [destinationAccountId], references: [id])
  sourceAccount        Account  @relation("SourceAccountTransactions", fields: [sourceAccountId], references: [id])

  @@index([sourceAccountId])
  @@index([destinationAccountId])
}
